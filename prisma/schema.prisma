generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  first_name String?
  last_name  String?
  
  bookmarks Bookmarks[]
}
model Bookmarks {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title String
  desc String?
  link String

  userId Int
  user   Users @relation(fields: [userId], references: [id])
}
